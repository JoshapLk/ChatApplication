<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="342.0" prefWidth="292.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegisterController">
    <Label text="Register" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <TextField fx:id="nicknameField" promptText="Nickname" />
    <Button onAction="#handleRegister" text="Register" />
    <Button onAction="#switchToLogin" text="Back to Login" />
    <Label fx:id="statusLabel" textFill="red" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
